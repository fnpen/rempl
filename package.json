{
    "name": "rempl",
    "version": "1.0.0-alpha.19",
    "description": "Ð latform for moderated remote access to JavaScript runtime via custom UI",
    "repository": "rempl/rempl",
    "license": "MIT",
    "author": "Roman Dvornov",
    "contributors": [
        "Roman Dvornov <rdvornov@gmail.com>",
        "Sergey Melyukov <s.melukov@gmail.com>",
        "Anastasia Goryacheva <a.e.goryacheva@gmail.com>"
    ],
    "type": "module",
    "main": "src/index.js",
    "browser": "dist/rempl-new.js",
    "scripts": {
        "lint": "eslint scripts src test && npm run ts-check",
        "ts-check": "tsc --noEmit",
        "test": "npm run test:esm && npm run test:cjs",
        "test:esm": "mocha esm-test",
        "test:cjs": "mocha cjs-test",
        "buildx": "tsc src/*.ts test/*.ts --outDir esm -m es2020 -t es2021",
        "build": "npm run build:rempl",
        "build:rempl": "node scripts/build.cjs",
        "build:rempl_": "browserify -t package-json-versionify --standalone rempl src/index.js | node scripts/process-rempl-bundle.js | uglifyjs --compress keep_fargs=false --mangle --output dist/rempl.js",
        "build:rempl-dev": "browserify -t package-json-versionify --standalone rempl src/index.js | node scripts/process-rempl-bundle.js > dist/rempl.js",
        "build:server-assets": "node node_modules/basisjs-tools-build/bin/build -c server/client/build.config",
        "watch": "watch \"npm run build:rempl\" src --interval .2",
        "travis": "npm run lint && npm run test",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "chalk": "~1.1.3",
        "socket.io-client": "^2.0.2"
    },
    "devDependencies": {
        "@types/node": "^16.9.1",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "basisjs": "~1.11.0",
        "basisjs-tools-build": "^1.9.0",
        "browserify": "^13.0.0",
        "esbuild": "^0.13.2",
        "eslint": "^7.32.0",
        "eslint-plugin-prettier": "^4.0.0",
        "mocha": "^9.1.3",
        "package-json-versionify": "^1.0.4",
        "prettier": "2.4.0",
        "rollup": "^2.70.2",
        "sucrase": "^3.21.0",
        "typescript": "^4.4.3",
        "uglify-js": "^3.1.2",
        "watch": "^1.0.2"
    },
    "files": [
        "dist",
        "server/*.js",
        "src"
    ]
}
