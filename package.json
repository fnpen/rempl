{
    "name": "rempl",
    "version": "1.0.0-alpha.19",
    "description": "Platform for moderated remote access to JavaScript runtime via custom UI",
    "repository": "rempl/rempl",
    "license": "MIT",
    "author": "Roman Dvornov",
    "contributors": [
        "Roman Dvornov <rdvornov@gmail.com>",
        "Sergey Melyukov <s.melukov@gmail.com>",
        "Anastasia Goryacheva <a.e.goryacheva@gmail.com>"
    ],
    "type": "module",
    "main": "src/index.js",
    "browser": "dist/rempl-new.js",
    "exports": {
        ".": {
            "require": "./cjs/index.cjs",
            "import": "./esm/index.js"
        },
        "./browser": {
            "require": "./cjs/browser.cjs",
            "import": "./esm/browser.js"
        }
    },
    "scripts": {
        "lint": "eslint scripts src test && npm run ts-check",
        "ts-check": "tsc --noEmit",
        "test": "npm run test:esm && npm run test:cjs",
        "test:esm": "mocha esm-test",
        "test:cjs": "mocha cjs-test",
        "buildx": "tsc src/*.ts test/*.ts --outDir esm -m es2020 -t es2021",
        "build": "npm run build:rempl",
        "build:bundle": "node scripts/build.cjs",
        "build:server-assets": "node node_modules/basisjs-tools-build/bin/build -c server/client/build.config",
        "build:transpile": "node scripts/transpile.cjs",
        "coverage": "c8 --exclude cjs-test --exclude esm-test --reporter=lcovonly npm test",
        "watch": "npm run build:transpile -- --watch",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "chalk": "~4.1.2",
        "socket.io-client": "^2.0.2"
    },
    "devDependencies": {
        "@types/node": "^17.0.30",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "basisjs": "~1.11.1",
        "basisjs-tools-build": "^1.12.2",
        "c8": "^7.11.2",
        "esbuild": "^0.14.38",
        "eslint": "^8.14.0",
        "eslint-plugin-prettier": "^4.0.0",
        "mocha": "^10.0.0",
        "prettier": "2.6.2",
        "rollup": "^2.71.1",
        "sucrase": "^3.21.0",
        "typescript": "^4.6.4"
    },
    "files": [
        "cjs",
        "esm",
        "dist",
        "server/*.js"
    ]
}
