{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "module": "ES2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES6",
        "lib": ["DOM", "ESNext"],
        "allowJs": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist", "test", "server", "example"]
}
